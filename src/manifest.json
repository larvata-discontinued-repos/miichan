{
	"manifest_version": 2,
	"name": "miichan",
	"version": "{version}",
	"author":"Larvata",

	"permissions":[
		"notifications",
		"storage",
		"http://live.sashi.co/"
	],

	"icons":{
		"128":"images/icon128.png"
		},

	"browser_action":{
		"default_icon":{
			"128":"images/icon128.png"
		},
		"default_title":"Miichan v{version}",
		"default_popup":"popup.html"

	},

	"options_page":"options.html",
	"background":{
		"scripts":["scripts/zepto.min.js","scripts/lodash.min.js","scripts/birthday.js","background.js"],
		"css":[
			"font-awesome.min.css",
			"pure-min.css"
			]
	}
}
